<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zaks.ayala.nearbydeals.ui.SupplierDetailsActivity"
    android:orientation="vertical"
    android:background="@color/gray_background">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/card_padding"
        app:cardElevation="@dimen/card_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/AppTheme.FieldHeader"
                android:text="@string/supplier_details_supplier_name"/>
            <EditText
               style="@style/AppTheme.EditText"
                android:id="@+id/supplier_details_supplier_name"/>
            <TextView
                style="@style/AppTheme.FieldHeader"
                android:text="@string/supplier_details_supplier_email"/>
            <EditText
                style="@style/AppTheme.EditText"
                android:id="@+id/supplier_details_supplier_email"/>
            <TextView
                style="@style/AppTheme.FieldHeader"
                android:text="@string/supplier_details_supplier_phone"/>
            <EditText
                style="@style/AppTheme.EditText"
                android:id="@+id/supplier_details_supplier_phone"/>
            <TextView
                style="@style/AppTheme.FieldHeader"
                android:text="@string/supplier_details_supplier_address"/>
            <fragment
                android:id="@+id/supplier_details_supplier_address"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                style="@style/AppTheme.EditText"/>
            <TextView
                style="@style/AppTheme.FieldHeader"
                android:text="@string/supplier_details_supplier_category"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/supplier_details_supplier_category"></Spinner>

            <Button
                style="@style/AppTheme.Button"
                android:layout_gravity="right"
                android:onClick="SaveNewSupplier"
                android:text="@string/add_deal_save" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
