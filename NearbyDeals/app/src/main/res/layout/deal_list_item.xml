<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/card_padding"
        app:cardElevation="@dimen/card_elevation"
        android:layout_margin="@dimen/card_padding"
        android:id="@+id/deal_list_item_card"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingTop="@dimen/card_text_top_padding">

                <TextView
                    android:id="@+id/deal_list_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_primary_text"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/deal_list_item_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_sub_text"/>

                <TextView
                    android:id="@+id/deal_list_item_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_sub_text"/>

            </LinearLayout>

            <!--<ImageView-->
                <!--android:id="@+id/deal_list_item_image"-->
                <!--android:layout_width="@dimen/card_image_size"-->
                <!--android:layout_height="@dimen/card_image_size" />-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/card_button_edit"
                style="@style/AppTheme.Button"
                android:text="@string/card_edit" />

            <Button
                android:id="@+id/card_button_delete"
                style="@style/AppTheme.Button"
                android:text="@string/card_delete" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

